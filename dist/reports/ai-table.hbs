{{#if (gt ctrf.summary.failed 0)}}
{{#if ctrf.extra.ai}}
### ✨ AI Test Analysis

{{ctrf.extra.ai}}
{{/if}}
<table>
    <thead>
        <tr>
            <th>Failed Tests</th>
            <th>AI Analysis ✨</th>
        </tr>
    </thead>
    <tbody>
{{#each ctrf.tests ~}}
  {{~#if (eq status "failed") ~}}
        <tr>
            <td>{{getCtrfEmoji "failed"}} {{name}}</td>
            <td>{{#if ai}}{{~{formatTestMessage ai}}}{{else}}No AI summary available{{/if}}</td>
        </tr>
  {{~/if}}
{{~/each}}
    </tbody>
</table>
{{else}}
<p>No failed tests ✨</p>
{{/if}}

