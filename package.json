{
  "name": "github-actions-ctrf",
  "version": "0.0.58",
  "description": "View test results directly within your GitHub workflow summary and Pull Requests",
  "main": "index.js",
  "scripts": {
    "bundle": "npm run format:write && npm run package",
    "ci-test": "npx jest",
    "test": "npx jest",
    "coverage": "npx make-coverage-badge --output-path ./badges/coverage.svg",
    "format:write": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "lint": "npx eslint . -c ./.github/linters/.eslintrc.yml",
    "package": "npx ncc build src/index.ts -o dist --source-map --license licenses.txt && npm run copyfiles",
    "copyfiles": "copyfiles -u 2 \"src/reports/*.hbs\" dist/reports && copyfiles -u 2 \"community-reports/**/*.hbs\" dist/community-reports",
    "package:watch": "npm run package -- --watch",
    "build:npm": "rm -rf dist && tsc && npm run copyfiles",
    "all:npm": "npm run format:write && npm run lint && npm run test && npm run build:npm",
    "all:action": "npm run format:write && npm run lint && npm run test && npm run coverage && npm run package",
    "modify-reports": "ts-node scripts/modify-reports.ts"
  },
  "bin": {
    "github-actions-ctrf": "./dist/core/cli.js"
  },
  "files": [
    "dist/",
    "README.md"
  ],
  "keywords": [],
  "author": "Matthew Thomas",
  "license": "MIT",
  "jest": {
    "preset": "ts-jest",
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "reporters": [
      "default",
      [
        "jest-ctrf-json-reporter",
        {}
      ]
    ],
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ]
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/adm-zip": "^0.5.6",
    "@types/jest": "^29.5.13",
    "@types/node": "^20.12.7",
    "@types/yargs": "^17.0.32",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.10.0",
    "@vercel/ncc": "^0.38.2",
    "copyfiles": "^2.4.1",
    "eslint": "^8.57.0",
    "eslint-plugin-jest": "^28.8.3",
    "eslint-plugin-jsonc": "^2.16.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "jest-ctrf-json-reporter": "^0.0.9",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.3.3",
    "prettier-eslint": "^16.3.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@actions/artifact": "^2.2.1",
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.0",
    "@octokit/rest": "^21.0.2",
    "@types/adm-zip": "^0.5.5",
    "adm-zip": "^0.5.16",
    "ai-ctrf": "^0.0.11",
    "ansi-to-html": "^0.7.2",
    "ctrf": "^0.0.12",
    "handlebars": "^4.7.8",
    "junit-to-ctrf": "^0.0.9",
    "slack-ctrf": "^0.0.21",
    "teams-ctrf": "^0.0.6",
    "yargs": "^17.7.2"
  }
}
